<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:gravity="center_horizontal"
    android:orientation="vertical"
    tools:context="com.gsoft.keyhandover.KeyHandoverActivity1">

    <RelativeLayout
        android:id="@+id/title_bar"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:background="@color/blue_01">

        <EditText
            android:id="@+id/getinfo_et"
            android:layout_width="1dp"
            android:layout_height="1dp"
            android:layout_marginLeft="6dp"
            android:layout_marginTop="6dp"
            android:background="#00000000"
            android:textColor="#00000000"
            android:textSize="1sp" />

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerInParent="true"
            android:text="钥匙交接"
            android:textColor="@color/gray_01"
            android:textSize="18sp" />
    </RelativeLayout>

    <TextView
        android:id="@+id/confirm_btn"
        android:layout_width="match_parent"
        android:layout_height="48dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/bottom_btn_bg"
        android:gravity="center"
        android:text="确认接收"
        android:textColor="@color/gray_01"
        android:textSize="16sp" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_below="@+id/title_bar"
        android:layout_marginLeft="18dp"
        android:layout_marginRight="18dp"
        android:layout_marginTop="20dp"
        android:gravity="center_horizontal"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="钥匙名称:"
                android:textColor="#3c3c3c"
                android:textSize="16.0dp" />

            <TextView
                android:id="@+id/KeyName"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_text"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/black_03"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="实用车型:"
                android:textColor="#3c3c3c"
                android:textSize="16.0dp" />

            <TextView
                android:id="@+id/CarType_Sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_text"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/black_03"
                android:textSize="14dp" />

        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="钥匙类型:"
                android:textColor="#3c3c3c"
                android:textSize="16.0dp" />

            <TextView
                android:id="@+id/KeyType_Sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_text"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/black_03"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView

                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="所属车组号:"
                android:textColor="#3c3c3c"
                android:textSize="16.0dp" />

            <TextView
                android:id="@+id/CheZuHao_Sp"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:background="@drawable/bg_text"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/black_03"
                android:textSize="14dp" />


        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/tv_usernamez"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="钥匙数量:"
                android:textColor="#3c3c3c"
                android:textSize="16.0dp" />

            <TextView
                android:id="@+id/KeyShuLiang_Tv"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_text"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/black_03"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="交  出  人:"
                android:textColor="#3c3c3c"
                android:textSize="16.0dp" />

            <TextView
                android:id="@+id/JiaochuRen_Ext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_text"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/black_02"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout

            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:focusable="true"
            android:focusableInTouchMode="true"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="接  取  人:"
                android:textColor="#3c3c3c"
                android:textSize="16.0dp" />

            <TextView
                android:id="@+id/JiaoJieRen_Ext"
                android:layout_width="match_parent"
                android:layout_height="30dp"
                android:layout_marginLeft="15dp"
                android:background="@drawable/bg_text"
                android:gravity="center_vertical"
                android:paddingLeft="6dp"
                android:singleLine="true"
                android:textColor="@color/black_02"
                android:textSize="14dp" />
        </LinearLayout>

        <LinearLayout
            android:id="@+id/parentz"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="16dp"
            android:layout_marginTop="20dp"
            android:orientation="horizontal">

            <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="5dp"
                android:text="交接时间:"
                android:textColor="#3c3c3c"
                android:textSize="16.0dp" />

            <TextView
                android:id="@+id/JiaoJieTime"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="15dp"
                android:gravity="center"
                android:hint="2017-9-13 13:50"
                android:singleLine="true"
                android:textSize="16dp"
                android:textStyle="italic" />
        </LinearLayout>

    </LinearLayout>
</RelativeLayout>
