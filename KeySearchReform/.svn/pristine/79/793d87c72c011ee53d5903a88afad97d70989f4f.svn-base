    <LinearLayout
        android:id="@+id/node_state_1"
        android:layout_width="match_parent"
        android:layout_height="96dp"
        android:orientation="horizontal">

        <RelativeLayout
            android:layout_width="36dp"
            android:layout_height="match_parent"
            android:layout_marginLeft="50dp">

            <ImageView
                android:layout_width="8dp"
                android:layout_height="match_parent"
                android:layout_centerHorizontal="true"
                android:scaleType="fitXY"
                android:src="@drawable/nodecontrol2_xian" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="27dp"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="12dp"
                android:src="@drawable/nodecontrol2_weikaishi" />

        </RelativeLayout>

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:layout_marginBottom="26dp"
            android:layout_marginTop="10dp"
            android:gravity="center_vertical">

            <TextView
                android:id="@+id/job_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginLeft="18dp"
                android:text="无电申请"
                android:textColor="#808080"
                android:textSize="18sp" />

            <TextView
                android:id="@+id/post_name_1"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@+id/job_name_1"
                android:layout_marginLeft="18dp"
                android:text="六班八组检修组组长"
                android:textColor="#808080"
                android:textSize="18sp" />

        </RelativeLayout>

    </LinearLayout>

